{
    "name": "@hypequery/core",
    "version": "0.1.0",
    "description": "Real-time ClickHouse query builder with TypeScript support",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "type": "module",
    "scripts": {
        "build": "tsc",
        "dev": "tsc --watch",
        "test": "jest",
        "lint": "eslint src/**/*.ts",
        "generate-types": "NODE_OPTIONS=\"--loader ts-node/esm --experimental-specifier-resolution=node\" ts-node src/cli/generate-types.ts",
        "test-cli": "node --loader ts-node/esm src/cli/generate-test.ts"
    },
    "dependencies": {
        "@clickhouse/client-web": "^0.2.0",
        "dotenv": "^16.0.0"
    },
    "devDependencies": {
        "@types/jest": "^29.0.0",
        "@types/node": "^18.0.0",
        "jest": "^29.0.0",
        "ts-jest": "^29.0.0",
        "ts-node": "^10.9.0",
        "typescript": "^5.7.3"
    },
    "bin": {
        "hypequery-generate": "./dist/cli/generate-types.js"
    },
    "ts-node": {
        "esm": true,
        "experimentalSpecifiers": true
    }
}
