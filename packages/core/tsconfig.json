{
    "extends": "../tsconfig/base.json",
    "compilerOptions": {
        "target": "es2020",
        "module": "es2020",
        "moduleResolution": "Node",
        "outDir": "./dist",
        "rootDir": "./src",
        "composite": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.test.ts"
    ]
}