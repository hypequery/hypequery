{
  "name": "@hypequery/serve",
  "version": "0.0.2",
  "description": "Declarative HTTP server for exposing hypequery analytics endpoints",
  "license": "Apache-2.0",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "dev": "tsc --project tsconfig.json --watch",
    "lint": "eslint --ext .ts \"src/**/*.ts\"",
    "test:types": "tsc --project tsconfig.type-tests.json",
    "test": "npm run test:types && vitest run",
    "types": "tsc --project tsconfig.json --noEmit"
  },
  "dependencies": {
    "openapi-typescript": "^7.4.2",
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.23.5"
  },
  "peerDependencies": {
    "tsx": "^4.0.0"
  },
  "peerDependenciesMeta": {
    "tsx": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@vitest/coverage-v8": "^2.1.9",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^2.1.6"
  },
  "publishConfig": {
    "access": "public"
  }
}
