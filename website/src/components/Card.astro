---
interface Props {
  title?: string;
  href?: string;
  class?: string;
}

const { title, href, class: className = "" } = Astro.props;

const cardContent = `h-full rounded-lg border border-gray-200 bg-white p-6 shadow-sm transition-all hover:shadow-md ${className}`;
---

{
  href ? (
    <a href={href} class="block h-full no-underline">
      <div class={cardContent}>
        {title && (
          <h3 class="text-lg font-semibold mb-2 text-gray-900">{title}</h3>
        )}
        <div class="text-gray-700">
          <slot />
        </div>
      </div>
    </a>
  ) : (
    <div class={cardContent}>
      {title && (
        <h3 class="text-lg font-semibold mb-2 text-gray-900">{title}</h3>
      )}
      <div class="text-gray-700">
        <slot />
      </div>
    </div>
  )
}

