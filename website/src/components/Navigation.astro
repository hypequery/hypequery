---
import ThemeToggle from "./ThemeToggle.astro";

const navigation = [
  { name: "Docs", href: "/docs" },
  {
    name: "Resources",
    children: [
      { name: "Changelog", href: "/changelog" },
      {
        name: "Roadmap",
        href: "https://hypequery.featurebase.app/roadmap",
        external: true,
      },
      { name: "Blog", href: "/blog" },
    ],
  },
  {
    name: "GitHub",
    href: "https://github.com/hypequery/hypequery",
    icon: true,
  },
];

type NavigationLink = {
  name: string;
  href: string;
  icon?: boolean;
  isNew?: boolean;
  isBeta?: boolean;
  external?: boolean;
};

type NavigationItem = NavigationLink & { children?: NavigationLink[] };
---

<header class="fixed inset-x-0 top-0 z-50 border-b">
  <nav
    class="flex h-20 items-center justify-between px-6 lg:px-8"
    aria-label="Global"
  >
    <div class="flex lg:flex-1">
      <a
        href="/"
        class="font-mono text-xl font-bold text-indigo-600 flex items-center"
      >
        &gt; hypequery
      </a>
    </div>
    <div class="flex items-center gap-x-6 justify-end flex-1">
      <div class="flex gap-x-8 items-center">
        {
          navigation.map((item: NavigationItem) =>
            item.children ? (
              <div class="relative group">
                <button
                  type="button"
                  class="nav-link text-sm font-semibold leading-6 flex items-center gap-1"
                >
                  {item.name}
                  <svg
                    class="h-4 w-4 text-gray-400 group-hover:text-indigo-500 transition"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <path
                      d="M6 9l6 6 6-6"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    />
                  </svg>
                </button>
                <div class="invisible group-hover:visible opacity-0 group-hover:opacity-100 transition-all duration-150 absolute right-0 mt-3 w-48 rounded-xl border border-gray-100 bg-white shadow-xl ring-1 ring-black/5 dark:border-slate-700 dark:bg-slate-800">
                  <div class="py-3">
                    {item.children.map((child) => (
                      <a
                        href={child.href}
                        class="block px-5 py-2 text-sm text-gray-700 hover:bg-indigo-50 hover:text-indigo-700 dark:text-slate-200 dark:hover:bg-slate-700/60"
                        target={child.external ? "_blank" : undefined}
                        rel={child.external ? "noopener" : undefined}
                      >
                        {child.name}
                      </a>
                    ))}
                  </div>
                </div>
              </div>
            ) : item.icon ? (
              <a
                href={item.href}
                class="nav-link text-sm font-semibold leading-6 flex items-center"
                target="_blank"
                rel="noopener"
              >
                <span class="sr-only">GitHub</span>
                <svg
                  class="h-6 w-6"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                  aria-hidden="true"
                >
                  <path
                    fill-rule="evenodd"
                    d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                    clip-rule="evenodd"
                  />
                </svg>
              </a>
            ) : (
              <a
                href={item.href}
                class="nav-link text-sm font-semibold leading-6 flex items-center"
              >
                {item.name}
                {item.isNew && (
                  <span class="ml-2 inline-flex items-center rounded-md bg-indigo-50 px-2 py-1 text-xs font-medium text-indigo-700 ring-1 ring-inset ring-indigo-700/10">
                    {"isBeta" in item && item.isBeta ? "Coming soon" : "New"}
                  </span>
                )}
              </a>
            ),
          )
        }
      </div>
      <ThemeToggle />
    </div>
  </nav>
</header>
