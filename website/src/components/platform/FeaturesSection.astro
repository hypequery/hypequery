---
import Icons from "../Icons.astro";
---

<!-- Features Section -->
<section class="py-20">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2
        class="text-3xl md:text-4xl font-bold text-gray-900 mb-4 animate-on-scroll"
      >
        Powerful Features, No Code Required
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto animate-on-scroll">
        Our visual query builder makes data analysis accessible to everyone,
        regardless of technical expertise.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Feature 1: No-Code Query Building -->
      <div
        class="bg-white rounded-xl shadow-md p-6 feature-card animate-on-scroll"
      >
        <div
          class="w-12 h-12 bg-indigo-100 rounded-lg flex items-center justify-center mb-4"
        >
          <Icons name="drag" class="w-6 h-6 text-indigo-600" />
        </div>
        <h3 class="text-xl font-semibold mb-2">No-Code Query Building</h3>
        <p class="text-gray-600 mb-4">
          Create complex queries with a simple drag-and-drop interface.
        </p>

        <!-- Placeholder for query builder screenshot -->
        <div class="mt-4 rounded-lg overflow-hidden border border-gray-200">
          <div
            class="aspect-[4/3] bg-gray-100 flex items-center justify-center"
          >
            <span class="text-gray-400">Query Builder Screenshot</span>
          </div>
        </div>
      </div>

      <!-- Feature 2: Advanced Visualizations -->
      <div
        class="bg-white rounded-xl shadow-md p-6 feature-card animate-on-scroll"
      >
        <div
          class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mb-4"
        >
          <Icons name="chart" class="w-6 h-6 text-blue-600" />
        </div>
        <h3 class="text-xl font-semibold mb-2">Advanced Visualizations</h3>
        <p class="text-gray-600 mb-4">
          Transform raw data into stunning, interactive visualizations.
        </p>

        <!-- Placeholder for visualization screenshot -->
        <div class="mt-4 rounded-lg overflow-hidden border border-gray-200">
          <div
            class="aspect-[4/3] bg-gray-100 flex items-center justify-center"
          >
            <span class="text-gray-400">Visualization Example</span>
          </div>
        </div>
      </div>

      <!-- Feature 3: Collaboration -->
      <div
        class="bg-white rounded-xl shadow-md p-6 feature-card animate-on-scroll"
      >
        <div
          class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mb-4"
        >
          <Icons name="share" class="w-6 h-6 text-green-600" />
        </div>
        <h3 class="text-xl font-semibold mb-2">Collaboration</h3>
        <p class="text-gray-600 mb-4">
          Share dashboards and insights with your team in real-time.
        </p>

        <!-- Placeholder for collaboration screenshot -->
        <div class="mt-4 rounded-lg overflow-hidden border border-gray-200">
          <div
            class="aspect-[4/3] bg-gray-100 flex items-center justify-center"
          >
            <span class="text-gray-400">Collaboration Example</span>
          </div>
        </div>
      </div>

      <!-- Feature 4: Dashboarding -->
      <div
        class="bg-white rounded-xl shadow-md p-6 feature-card animate-on-scroll"
      >
        <div
          class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mb-4"
        >
          <Icons name="dashboard" class="w-6 h-6 text-purple-600" />
        </div>
        <h3 class="text-xl font-semibold mb-2">Dashboarding</h3>
        <p class="text-gray-600 mb-4">
          Build custom dashboards tailored to your business needs.
        </p>

        <!-- Placeholder for dashboard screenshot -->
        <div class="mt-4 rounded-lg overflow-hidden border border-gray-200">
          <div
            class="aspect-[4/3] bg-gray-100 flex items-center justify-center"
          >
            <span class="text-gray-400">Dashboard Example</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

