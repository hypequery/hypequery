<!doctype html>
<html lang="en" class="h-full">
  <head>
    <script is:inline>
      (() => {
        const STORAGE_KEY = "hypequery-theme";
        const mediaQuery = window.matchMedia("(prefers-color-scheme: dark)");
        const root = document.documentElement;
        const resolve = (mode) => {
          if (mode === "system") {
            return mediaQuery.matches ? "dark" : "light";
          }
          return mode;
        };
        const apply = (mode) => {
          const theme = resolve(mode);
          root.dataset.theme = theme;
          root.style.colorScheme = theme === "dark" ? "dark" : "light";
        };
        const stored = localStorage.getItem(STORAGE_KEY) || "system";
        apply(stored);
        window.__hypequeryGetTheme = () =>
          localStorage.getItem(STORAGE_KEY) || "system";
        window.__hypequerySetTheme = (mode) => {
          localStorage.setItem(STORAGE_KEY, mode);
          apply(mode);
          window.dispatchEvent(
            new CustomEvent("hypequery-theme-change", { detail: mode }),
          );
        };
        mediaQuery.addEventListener("change", () => {
          if ((localStorage.getItem(STORAGE_KEY) || "system") === "system") {
            apply("system");
            window.dispatchEvent(
              new CustomEvent("hypequery-theme-change", { detail: "system" }),
            );
          }
        });
      })();
    </script>
    <script is:inline>
      (() => {
        const STORAGE_KEY = "hypequery-docs-sidebar-scroll";
        const SELECTOR = "[data-docs-sidebar-scroll]";
        const restore = () => {
          const el = document.querySelector(SELECTOR);
          if (!el) return;
          const saved = sessionStorage.getItem(STORAGE_KEY);
          if (saved !== null) {
            el.scrollTop = Number(saved);
          }
          let ticking = false;
          const save = () => {
            sessionStorage.setItem(STORAGE_KEY, String(el.scrollTop));
            ticking = false;
          };
          el.addEventListener("scroll", () => {
            if (!ticking) {
              ticking = true;
              requestAnimationFrame(save);
            }
          });
        };
        if (document.readyState === "loading") {
          document.addEventListener("DOMContentLoaded", restore);
        } else {
          restore();
        }
      })();
    </script>
    <Head title={title} description={description} favicon="/favicon.svg" />
  </head>
  <body class="h-full">
    <Navigation />

    <div
      class="relative mx-auto max-w-8xl justify-center sm:px-2 lg:px-8 xl:px-12 pt-10"
    >
