// Helper function to get the current section title
function getCurrentSectionTitle(currentPath: string): string | null {
  for (const section of sidebar) {
    const isInSection = section.items.some((item: any) => {
      if (item.href === currentPath) return true;
      if (item.items) {
        return item.items.some((subItem: any) => subItem.href === currentPath);
      }
      return false;
    });
    if (isInSection) {
      return section.title;
    }
  }
  return null;
}

const currentSectionTitle = getCurrentSectionTitle(currentPath);
