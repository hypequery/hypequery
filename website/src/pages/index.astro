---
import Layout from "../layouts/Layout.astro";
import aiContextRaw from "../data/ai-context.txt?raw";
import Prism from "prismjs";
import "prismjs/components/prism-typescript";
import "prismjs/components/prism-json";
import "prismjs/components/prism-http";
import {
  heroCode,
  runAnywhereSnippets,
  useCaseExamples as useCaseExamplesRaw,
} from "../data/homepage-content";
import { Bookmark, Code, FileText, Radar } from "@lucide/astro";

const aiContext = aiContextRaw.trim();

const highlightCode = (code: string, language: string = "typescript") =>
  Prism.highlight(
    code.trim(),
    Prism.languages[language] ?? Prism.languages.typescript,
    language,
  );

const heroHighlighted = highlightCode(heroCode);

const runAnywhereHighlighted = Object.fromEntries(
  Object.entries(runAnywhereSnippets).map(([key, snippet]) => [
    key,
    highlightCode(snippet.code, snippet.language),
  ]),
);

const useCaseExamples = useCaseExamplesRaw.map((example) => ({
  ...example,
  highlighted: highlightCode(example.code, example.codeLanguage),
}));

const defaultUseCase = useCaseExamples[0] ?? null;
---

<Layout title="hypequery – Type-Safe Analytics Backend for ClickHouse Teams">
  <main>
    <!-- Hero section -->
    <div class="relative isolate pt-14">
      <div class="pt-24">
        <div class="mx-auto max-w-7xl px-4 lg:px-6">
          <div
            class="flex flex-col items-start md:flex-row md:items-end relative"
          >
            <div class="max-w-3xl pb-12 relative z-10">
              <div
                class="inline-flex items-center mb-2 rounded-full bg-indigo-50 px-3 py-1 text-xs font-semibold uppercase tracking-wide text-indigo-700 animate-on-scroll dark:bg-indigo-500/10 dark:text-indigo-200"
              >
                Analytics Backend for ClickHouse Teams
              </div>
              <h1
                class="text-4xl font-bold tracking-tight text-gray-900 sm:text-6xl animate-on-scroll"
              >
                Stop breaking analytics as your product scales
              </h1>
              <div>
                <p
                  class="mt-4 text-lg leading-8 text-gray-600 animate-on-scroll"
                >
                  Define ClickHouse metrics once in TypeScript, then reuse them
                  across APIs, background jobs, dashboards, and AI agents with
                  full type safety.
                </p>
                <p
                  class="mt-2 text-lg leading-8 text-gray-600 animate-on-scroll font-medium"
                >
                  One definition. Any context. Zero drift.
                </p>
              </div>
              <div class="mt-8 space-y-3 animate-on-scroll">
                <div class="flex flex-wrap items-center gap-4">
                  <a
                    href="/docs/getting-started/quickstart"
                    class="rounded-md bg-indigo-600 px-4 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"
                  >
                    Start in 2 Minutes &rarr;
                  </a>
                </div>
                <div class="flex flex-wrap items-center gap-4">
                  <a
                    href="https://github.com/hypequery/hypequery"
                    class="inline-flex items-center gap-2 rounded-md border border-gray-300 px-4 py-2.5 text-sm font-semibold text-gray-700 shadow-sm transition hover:bg-gray-50 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 dark:border-gray-600 dark:text-gray-200 dark:hover:bg-white/10"
                    target="_blank"
                    rel="noreferrer"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="h-4 w-4"
                      fill="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        d="M12 17.27 18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"
                      ></path>
                    </svg>
                    on GitHub
                  </a>
                  <button
                    type="button"
                    class="relative rounded-md border border-indigo-600 px-4 py-2.5 text-sm font-semibold text-indigo-600 shadow-sm transition hover:bg-indigo-50 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 dark:border-indigo-400/70 dark:text-indigo-200 dark:hover:bg-indigo-500/20"
                    data-copy-target="ai-context-snippet"
                  >
                    <span data-copy-default class="flex items-center gap-2">
                      Copy AI Context
                    </span>
                    <span
                      data-copy-success
                      class="pointer-events-none absolute inset-0 flex items-center justify-center gap-2 rounded-md bg-emerald-500/10 text-emerald-600 opacity-0 transition-opacity"
                    >
                      Copied
                    </span>
                  </button>
                </div>
              </div>
              <textarea
                id="ai-context-snippet"
                class="sr-only"
                aria-hidden="true"
                readonly>{aiContext}</textarea
              >
              <p
                class="mt-3 text-sm font-medium uppercase tracking-wide text-gray-500 animate-on-scroll"
              >
                No YAML &middot; No string-concatenated SQL &middot; No
                duplicated metrics
              </p>
            </div>
            <div class="hero-mascot-wrapper">
              <div class="animate-on-scroll md:-ml-40">
                <img
                  src="/mascot.png"
                  alt="hypequery mascot"
                  class="hero-mascot hero-mascot-light h-64 w-auto rounded-2xl object-contain"
                />
                <img
                  src="/mascot_dark.jpeg"
                  alt="hypequery mascot"
                  class="hero-mascot hero-mascot-dark h-64 w-auto rounded-2xl object-contain"
                />
              </div>
              <div
                class="absolute right-0 top-10 -translate-y-1/4 animate-on-scroll"
                data-hero-terminal
              >
                <div
                  class="relative w-[410px] min-h-[220px] rounded-2xl border border-gray-800 bg-gray-950 px-5 py-4 text-sm text-green-300 shadow-2xl"
                  data-hero-terminal-shell
                >
                  <div
                    class="flex items-center justify-between gap-3 font-mono"
                  >
                    <span>
                      <span class="text-gray-500">$</span>
                      <span data-terminal-command>npx hypequery init</span>
                    </span>
                    <button
                      type="button"
                      class="relative inline-flex min-w-[96px] items-center justify-center rounded-md border border-white/20 bg-white/10 px-2 py-1 text-xs font-semibold text-gray-100 transition hover:bg-white/20"
                      data-copy-snippet="npx hypequery init"
                      aria-label="Copy npx hypequery init"
                    >
                      <span
                        class="flex items-center gap-1 transition-opacity duration-200"
                        data-copy-default
                      >
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          class="h-3.5 w-3.5"
                          fill="none"
                          viewBox="0 0 24 24"
                          stroke="currentColor"
                          stroke-width="2"
                        >
                          <rect x="9" y="9" width="13" height="13" rx="2" ry="2"
                          ></rect>
                          <path
                            d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"
                          ></path>
                        </svg>
                        Copy
                      </span>
                      <span
                        aria-hidden="true"
                        class="pointer-events-none absolute inset-0 flex items-center justify-center gap-1 rounded-md bg-emerald-500/10 text-emerald-200 opacity-0 transition-opacity duration-200"
                        data-copy-success
                      >
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          class="h-3.5 w-3.5"
                          fill="none"
                          viewBox="0 0 24 24"
                          stroke="currentColor"
                          stroke-width="2"
                        >
                          <polyline points="20 6 9 17 4 12"></polyline>
                        </svg>
                        Copied
                      </span>
                    </button>
                  </div>
                  <div
                    class="mt-3 min-h-[110px] space-y-1 font-mono text-xs text-emerald-200/80"
                    data-terminal-log
                  >
                    <p>Waiting for command...</p>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <section
            class="mt-12 rounded-2xl py-8 text-gray-900 animate-on-scroll"
          >
            <p
              class="text-sm font-semibold uppercase tracking-wide text-indigo-500"
            >
              Analytics that behaves like code
            </p>
            <h2 class="mt-2 text-3xl font-bold tracking-tight">
              Metrics defined like software, not config
            </h2>
            <div class="mt-6 space-y-4 text-base leading-7 text-gray-600">
              <p>
                You define type safe queries in TypeScript, give them schemas
                and metadata, and execute them wherever you need: embedded in
                your app, exposed via APIs, or consumed by agents.
              </p>
            </div>
            <div class="mt-8 grid gap-6 lg:grid-cols-2">
              <div class="code-panel">
                <div class="code-panel__chrome">
                  <span></span>
                  <span></span>
                  <span></span>
                </div>
                <pre
                  class="code-panel__code"><code class="language-typescript" set:html={heroHighlighted} /></pre>
              </div>
              <div class="rounded-xl p-1 text-sm space-y-8">
                <div class="text-lg font-bold uppercase tracking-wide">
                  Define Once. Run anywhere.
                </div>
                <div>
                  <p class="mb-4 font-semibold text-md">Embedded</p>
                  <pre
                    class="bg-gray-950 p-2 rounded-lg border border-white/10 text-left leading-6 text-emerald-100"><code class="language-typescript" set:html={runAnywhereHighlighted.embedded} /></pre>
                </div>
                <div>
                  <p class="mb-4 font-semibold text-md">API</p>
                  <pre
                    class="bg-gray-950 p-2 rounded-lg border border-white/10 text-left text-xs leading-6 text-emerald-100"><code class="language-http" set:html={runAnywhereHighlighted.api} /></pre>
                </div>
                <div>
                  <p class="mb-4 font-semibold text-md">React</p>
                  <pre
                    class="bg-gray-950 p-2 rounded-lg border border-white/10 text-left text-xs leading-6 text-emerald-100"><code class="language-typescript" set:html={runAnywhereHighlighted.react} /></pre>
                </div>
                <div>
                  <p class="mb-4 font-semibold text-md">AI agent</p>
                  <pre
                    class="bg-gray-950 p-2 rounded-lg border border-white/10 text-left text-xs leading-6 text-emerald-100"><code class="language-json" set:html={runAnywhereHighlighted.agent} /></pre>
                </div>
              </div>
            </div>
          </section>

          <section class="mt-24">
            <h2
              class="text-3xl font-bold tracking-tight text-gray-900 animate-on-scroll"
            >
              What teams use hypequery for
            </h2>
            <div
              class="mt-10 grid gap-4 md:grid-cols-2 lg:grid-cols-4 animate-on-scroll"
              data-use-case-grid
            >
              {
                useCaseExamples.map((useCase) => (
                  <button
                    type="button"
                    class="use-case-card border border-gray-200 rounded-2xl p-6 bg-white text-left shadow-sm focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-500 transition"
                    data-use-case-card
                    data-title={useCase.title}
                    data-body={useCase.body}
                    data-code-language={useCase.codeLanguage}
                    data-code-html={encodeURIComponent(useCase.highlighted)}
                  >
                    <h3 class="text-lg font-semibold text-gray-900">
                      {useCase.title}
                    </h3>
                    <p class="mt-4 text-sm text-gray-600">{useCase.summary}</p>
                  </button>
                ))
              }
            </div>
            <div class="mt-10 animate-on-scroll" data-use-case-example>
              <div
                class="rounded-3xl bg-white p-6 text-gray-900 shadow-lg ring-2 ring-indigo-100 dark:bg-slate-900/60 dark:text-gray-100"
              >
                <h3
                  class="mt-3 text-2xl font-bold tracking-tight"
                  data-use-case-title
                >
                  {defaultUseCase?.title}
                </h3>
                <p
                  class="mt-4 text-base leading-7 text-gray-600 dark:text-gray-300"
                  data-use-case-body
                >
                  {defaultUseCase?.body}
                </p>
                <div class="mt-6">
                  <div class="code-panel" data-use-case-panel>
                    <div class="code-panel__chrome">
                      <span></span>
                      <span></span>
                      <span></span>
                    </div>
                    <pre
                      class="code-panel__code"
                      data-use-case-pre><code class="language-typescript" data-use-case-code set:html={defaultUseCase?.highlighted ?? ''} /></pre>
                  </div>
                </div>
              </div>
            </div>
          </section>

          <section class="mt-24 animate-on-scroll">
            <div
              class="relative left-1/2 right-1/2 w-screen -translate-x-1/2 bg-gray-100 py-16 dark:bg-slate-800"
            >
              <div class="mx-auto max-w-7xl px-4 lg:px-6">
                <div
                  class="grid gap-10 lg:grid-cols-[1.1fr_auto] lg:items-center"
                >
                  <div>
                    <h2 class="text-3xl font-bold tracking-tight text-gray-900">
                      Why not just write SQL everywhere?
                    </h2>
                    <p class="mt-6 text-lg leading-7 text-gray-700">
                      Because it only works until it doesn’t.
                    </p>
                    <div
                      class="mt-6 space-y-3 text-base leading-7 text-gray-700"
                    >
                      <p>Your API reports $1.2M in revenue.</p>
                      <p>The dashboard shows $1.3M.</p>
                      <p>The Slack bot says $1.1M.</p>
                    </div>
                    <div
                      class="mt-6 space-y-3 text-base leading-7 text-gray-700"
                    >
                      <p>Someone tweaked a date filter.</p>
                      <p>Someone else “fixed” the exclusion logic.</p>
                      <p>An agent hallucinated a JOIN.</p>
                    </div>
                    <div
                      class="mt-6 space-y-3 text-base leading-7 text-gray-700"
                    >
                      <p>
                        Suddenly “what’s our revenue?” needs a Slack thread, a
                        meeting, and three engineers debating whose SQL is
                        right.
                      </p>
                      <p>hypequery removes that ambiguity.</p>
                      <p class="text-xl font-bold text-gray-900">
                        Metrics live in code. Defined once, enforced everywhere.
                      </p>
                    </div>
                  </div>
                  <div class="flex justify-center">
                    <img
                      src="/confused_mascot.png"
                      alt="Confused mascot wondering about SQL"
                      class="h-72 w-auto rounded-3xl object-contain"
                    />
                  </div>
                </div>
              </div>
            </div>
          </section>

          <section class="mt-24 animate-on-scroll">
            <h2 class="text-3xl font-bold tracking-tight text-gray-900">
              A set of opt-in primitives for modern analytics
            </h2>
            <div class="mt-10 grid gap-6 md:grid-cols-2 lg:grid-cols-3">
              <div
                class="rounded-2xl border border-gray-200 bg-white p-6 shadow-sm"
              >
                <h3 class="text-lg font-semibold text-gray-900">
                  Type-safe query building
                </h3>
                <p class="mt-4 text-sm leading-6 text-gray-600">
                  Define analytics in TypeScript with schemas, metadata, and
                  ownership. Type errors surface during build, not in production
                  dashboards.
                </p>
              </div>
              <div
                class="rounded-2xl border border-gray-200 bg-white p-6 shadow-sm"
              >
                <h3 class="text-lg font-semibold text-gray-900">
                  Embedded-first execution
                </h3>
                <p class="mt-4 text-sm leading-6 text-gray-600">
                  Execute queries directly in your API routes, cron jobs, or
                  scripts. HTTP exposure is optional.
                </p>
              </div>
              <div
                class="rounded-2xl border border-gray-200 bg-white p-6 shadow-sm"
              >
                <h3 class="text-lg font-semibold text-gray-900">
                  Reusable queries
                </h3>
                <p class="mt-4 text-sm leading-6 text-gray-600">
                  Define once, import anywhere. Your API, dashboard, and agent
                  all use the same metric definition. No drift, no debates.
                </p>
              </div>
              <div
                class="rounded-2xl border border-gray-200 bg-white p-6 shadow-sm"
              >
                <h3 class="text-lg font-semibold text-gray-900">
                  Optional HTTP & APIs
                </h3>
                <p class="mt-4 text-sm leading-6 text-gray-600">
                  Auto-generate OpenAPI specs, input validation, and TypeScript
                  clients. Use HTTP only where it makes sense.
                </p>
              </div>
              <div
                class="rounded-2xl border border-gray-200 bg-white p-6 shadow-sm"
              >
                <h3 class="text-lg font-semibold text-gray-900">
                  Multi-tenancy isolation
                </h3>
                <p class="mt-4 text-sm leading-6 text-gray-600">
                  Auto-inject tenant filters at the query level. It's impossible
                  to accidentally query another customer's data.
                </p>
              </div>
              <div
                class="rounded-2xl border border-gray-200 bg-white p-6 shadow-sm"
              >
                <h3 class="text-lg font-semibold text-gray-900">Caching</h3>
                <p class="mt-4 text-sm leading-6 text-gray-600">
                  Cache at the query level with TTL, invalidation, and custom
                  cache keys.
                </p>
              </div>
            </div>
          </section>
        </div>
        <section
          class="my-16 relative isolate overflow-hidden bg-white px-6 py-16 text-center sm:px-12 lg:px-16 dark:bg-slate-900"
        >
          <div class="mx-auto max-w-3xl text-slate-900 dark:text-white">
            <p
              class="text-sm font-semibold uppercase tracking-[0.2em] text-slate-500 dark:text-white/70"
            >
              Ship faster
            </p>
            <h2 class="mt-4 text-3xl font-bold sm:text-4xl">
              Ready to stop rewriting SQL?
            </h2>
            <p
              class="mt-4 text-base text-slate-600 sm:text-lg dark:text-white/80"
            >
              Point hypequery at your ClickHouse cluster and get a typed
              analytics layer in minutes. Your API, jobs, and dashboards will
              finally agree on the numbers.
            </p>
            <div
              class="mt-8 flex flex-col items-center justify-center gap-4 sm:flex-row"
            >
              <a
                href="/docs/getting-started/quickstart"
                class="inline-flex items-center justify-center rounded-md bg-indigo-600 px-6 py-3 text-sm font-semibold text-white shadow-lg transition hover:-translate-y-0.5 hover:bg-indigo-500"
              >
                Get started →
              </a>
              <a
                href="/docs"
                class="inline-flex items-center justify-center rounded-md border border-slate-200 px-6 py-3 text-sm font-semibold text-slate-700 transition hover:bg-slate-50 dark:border-white/20 dark:text-white dark:hover:bg-white/10"
              >
                Explore docs
              </a>
            </div>
            <p class="mt-6 text-slate-600 dark:text-slate-400 font-medium">
              Early adopter? DM us <a
                href="https://twitter.com/hypequery"
                class="text-indigo-600 hover:text-indigo-700 font-medium"
                >@hypequery</a
              > — let's build this together.
            </p>
          </div>
        </section>
      </div>
    </div>
  </main>

  <script type="module">
    import '../scripts/homepage.ts';
  </script>

  <style>
    @keyframes blink {
      0%,
      100% {
        opacity: 1;
      }
      50% {
        opacity: 0;
      }
    }

    .animate-blink {
      animation: blink 1s step-end infinite;
    }

    [data-hero-terminal] {
      transition: none;
    }

    .hero-mascot-wrapper {
      display: none;
    }

    @media (min-width: 1240px) {
      .hero-mascot-wrapper {
        display: block;
      }
    }

    .code-panel {
      border-radius: 1.25rem;
      background: #020617;
      border: 1px solid rgba(99, 102, 241, 0.25);
      box-shadow: 0 25px 50px -12px rgba(15, 23, 42, 0.55);
    }

    .code-panel__chrome {
      display: flex;
      gap: 0.4rem;
      padding: 0.85rem 1rem 0.65rem;
    }

    .code-panel__chrome span {
      width: 0.65rem;
      height: 0.65rem;
      border-radius: 999px;
      background: rgba(255, 255, 255, 0.18);
    }

    .code-panel__code {
      border-radius: 0 0 1.25rem 1.25rem;
      border-top: 1px solid rgba(148, 163, 184, 0.15);
      background: rgba(2, 6, 23, 0.95);
      padding: 0.5rem 1rem;
      font-size: 0.92rem;
      line-height: 1.55;
      overflow-x: auto;
    }

    .code-panel__code code {
      font-family:
        "JetBrains Mono", "Fira Code", Menlo, Monaco, Consolas,
        "Liberation Mono", "Courier New", monospace;
    }
  </style>
</Layout>
